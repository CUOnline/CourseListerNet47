@using CourseLister.Models
@model HomeViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <div class="logo-container">
                <img id="logo" src="~/Content/cu-online.png" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    @Html.Partial("_IndexHeader")

                    <section id="loginForm">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(x => x.Authorized)

                            <div class="input-group">
                                @Html.LabelFor(m => m.CanvasAccountId, new { @class = "control-label" }) <br />
                                @Html.EditorFor(m => m.CanvasAccountId, new { @class = "form-control" }) <br />
                                @Html.ValidationMessageFor(model => model.CanvasAccountId, "", new { @class = "text-danger" })
                            </div>

                            <div class="input-group">
                                @Html.LabelFor(m => m.Query, new { @class = "control-label" }) <br />
                                @Html.EditorFor(m => m.Query, new { @class = "form-control" }) <br />
                                @Html.ValidationMessageFor(model => model.Query, "", new { @class = "text-danger" })
                            </div>
                            <br />

                            <div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>